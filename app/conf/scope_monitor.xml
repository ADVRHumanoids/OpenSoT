<!-- 
Scope for the sot_VelKinCon commands for the legs
Author: Alessio Rocchi

This xml file must be used with yarpscope: it plots by columns the joint commands for the legs. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="3" carrier="udp" persistent="0">

<!-- LEGS COMMAND -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="Joint 0 (blue=Right red=Left)"
          minval="-180"
          maxval="180"
          bgcolor="White">
        <graph remote="/sot_VelKinCon/right_leg/command:o"
               index="0"
               color="Blue"
               type="lines"
               size="2" />
        <graph remote="/sot_VelKinCon/left_leg/command:o"
               index="0"
               color="Red"
               size="2"
               type="lines" />
    </plot>
    
